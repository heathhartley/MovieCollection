@{
    ViewBag.Title = "Added Movies";

}
@model MovieEditList

<h1>@ViewData["Title"]</h1>


<style>
    table, th, td {
        border: 1px solid black;
        width: 100%;
        height: 70px;
    }
</style>


<h1> </h1>

<table class="table table-striped table-dark" align="left">
    <thead>
        <tr>
            <th scope="col">
                Title
            </th>
            <th scope="col"> Year </th>
            <th scope="col"> Director </th>
            <th scope="col"> Category </th>
            <th scope="col"> Rating </th>
            
            <th scope="col"> Note </th>
            
            <th scope="col"> Edited </th>

        </tr>
    </thead>
    <tbody>
        @foreach (EnterMovie x in Model.EnterMovies)
        {
            <tr>
                <form method="post" asp-action="SaveChanges">
                    <td>
                        <input name="title" id="title" value="@x.title" size="10" />
                    </td>
                    <td>
                        <input name="year" id="year" value="@x.year" size="4"/>
                    </td>
                    <td>
                        <input name="director" id="director" value="@x.director" size="10" />
                    </td>
                    <td>
                        <input name="category" id="category" value="@x.category" size="10"/>
                    </td>
                    <td>
                        <input type="hidden" name="rating_hidden" id="rating_hidden" value="@x.rating" />
                        <select id="rating" name="rating">
                            <option value="G">G</option>
                            <option value="PG">PG</option>
                            <option value="PG13">PG-13</option>
                            <option value="R">R</option>
                        </select>
                    </td>
                    <td>
                            <input name="note" id="note" value="@x.note" size="10"/>
                    </td>
                    <td>

                        <input type="hidden" name="edited_hidden" id="edited_hidden" value="@x.edited" />
                        <select id="edited" name="edited">
                            <option value="False">False</option>
                            <option value="True">True</option>
                        </select>
                    </td>

                    
                    <td>

                        <button class="btn btn-primary">Save</button>
                        <input name="movie_id" id="movie_id" type="hidden" value="@x.MovieId" />

                    </td>
                </form>
                <td>
                    <form method="post" asp-action="DeleteMovie">
                        <input name="movie_id" id="movie_id" type="hidden" value="@x.MovieId" />
                        <button class="btn btn-warning">Delete</button>
                    </form>
                </td>
            </tr>

        }

    </tbody>
</table>
