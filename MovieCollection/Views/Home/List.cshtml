@{
    ViewBag.Title = "Added Movies";

}
@model MovieEditList

<h1 class="text-center">@ViewData["Title"]</h1>


<style>
    table, th, td {
        border: 1px solid black;
        width: 100%;
        height: 70px;
    }
</style>


<h1> </h1>

<table class="table table-striped table-dark" align="left">
    <thead>
        <tr>
            <th scope="col">
                Title
            </th>
            <th scope="col"> Year </th>
            <th scope="col"> Rating </th>
            <th scope="col"> Category </th>
            <th scope="col"> Note </th>
            <th scope="col"> Director </th>
            <th scope="col"> Edited </th>

        </tr>
    </thead>
    <tbody>
        @foreach (EnterMovie x in Model.EnterMovies)
        {

        <tr>
            <th scope="row">@x.title</th>
            <td>@x.year</td>
            <td>@x.rating</td>
            <td>@x.category</td>
            <td>@x.note</td>
            <td>@x.director</td>
            <td>@x.edited</td>
            <td>
                <form method="post" asp-action="EditMovies">
                    <button class="btn btn-secondary">Edit</button>
                    <input name="movie_id" id="movie_id" type="hidden" value="@x.MovieId" />
                </form>
            </td>
            <td>
                <form method="post" asp-action="DeleteMovie">
                    <input name="movie_id" id="movie_id" type="hidden" value="@x.MovieId" />
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>


        </tr>

        }

    </tbody>
</table>
